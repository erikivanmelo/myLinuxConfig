general {
    #output_format = "dzen2"
    colors = true
    markup = "pango"
    interval = 1
    separator = "X"
}

order += "disk /"
order += "disk /home/dai/"
order += "volume master"
order += "memory"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "battery 0"
order += "tztime local"

disk "/" {
    format = "🖴 %avail"
    #align = "left"
    #min_width = 100
    #separator = false
    #separator_block_width = 1
}

disk "/home/dai/" {
    format = "🏠 %avail"
    #align = "left"
    #min_width = 100
    #separator = false
    #separator_block_width = 1
}

volume master {
        format = "🔊 %volume"
        format_muted = "🔊⃠ (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}


tztime local {
        format = "%a %d-%m-%Y %T"
}

memory {
        format = "RAM: %percentage_used"
}

cpu_usage{
        format = "CPU: %usage"
}

cpu_temperature 0{
        format = "%degrees °C"
        path = "/sys/class/hwmon/hwmon1/temp1_input"
}



battery 0 {
	last_full_capacity = true
        format = "%status %percentage %remaining"
        format_down = ""
        status_chr = ""
        status_bat = ""
        status_unk = ""
        status_full = ""
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}
